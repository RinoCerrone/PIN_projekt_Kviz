@model Kviz.Models.Quiz

<h2>@Model.Title</h2>

<form method="post" action="@Url.Action("Submit", "Question")">
    <input type="hidden" name="quizName" value="@Model.Title">
    
    @foreach (var question in Model.Questions)
    {

        
        <div>
            <h4>@question.Text</h4>
            @foreach (var answer in question.Answers)
            {
                 var sanitizedFieldName = question.Text.Replace(".", "_");
                <input  type="radio" name="@sanitizedFieldName" value="@answer"> @answer<br>
            }

            
        </div>
    }
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


