@model (string Title, List<Kviz.Models.QuizResult> Results)

<div class="text-center">
    <h3>@Model.Title</h3>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Ime</th>
                <th>Rezultat</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 10; i++)
            {
                var result = i < Model.Results.Count ? Model.Results[i] : null;
                <tr>
                    <td>@(i + 1)</td>
                    @if (result != null)
                    {
                        <td>@result.Username.Split('@')[0]</td>
                        <td>@result.Score</td>
                    }
                    else
                    {
                        <td></td>
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br/>
    <br/>
</div>
